.gem_element
  .card
    .card-block
      %h5.card-title
        .left
          = link_to laser_gem.name, laser_gem_path(laser_gem.name)
          %small.text-muted
            = laser_gem.gem_spec.current_version
        .right
          %small.text-muted
            %i.fa.fa-arrow-circle-down.fa-fw{"aria-hidden": "true"}
            =k_numbers laser_gem.gem_spec.total_downloads
      %p.card-text
        %small
          = truncate(laser_gem.gem_spec.info, length: 100, separator: ' ', omission: '... ') do
            = link_to 'more', laser_gem_path(laser_gem.name)
      %p.card-text
        -laser_gem.tag_list.each do |tag_name|
          %span.tag.tag-default=link_to(tag_name, search_tag_url(tag_name))
      - if laser_gem.gem_git != nil
        %p.card-text.text-xs-center
          = render "index_graph" , laser_gem: laser_gem
          = pluralize(total_commits(laser_gem), "commit", "commits")
          this year.
        %p.card-text.text-xs-center
          %span.card-link
            %i.fa.fa-code-fork{"aria-hidden" => "true"}
            = laser_gem.gem_git.forks_count
          %span.card-link
            %i.fa.fa-star{"aria-hidden" => "true"}
            = laser_gem.gem_git.stargazers_count
          %span.card-link
            %i.fa.fa-eye{"aria-hidden" => "true"}
            = laser_gem.gem_git.watchers_count
          %span.card-link
            %i.fa.fa-flag{"aria-hidden" => "true"}
            = laser_gem.gem_git.open_issues_count
