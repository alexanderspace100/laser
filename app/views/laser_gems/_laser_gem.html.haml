- @laser_gems.each do |laser_gem|
  .gem_element
    .gem_name
      %h2= link_to(laser_gem.name, laser_gem_path(laser_gem.name))
      %span
        \-
        = laser_gem.gem_spec.current_version
    .gem_main
      .gem_description
        %p
        \-
        = laser_gem.gem_spec.info
      .gem_tags
        %h4 Related tags
    .gem_numbers
      .gem_statistic
        .value
          =k_numbers laser_gem.gem_spec.total_downloads
        .label Downloads
      .gem_favorites
        .meta
          %a 100 favorites
