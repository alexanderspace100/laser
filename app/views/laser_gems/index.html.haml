.left
  .card
    .card-header
      .search
        = search_form_for @q do |f|
          = f.search_field :name_cont
          = f.submit
      .filter
        %label{for: "filter"}Filter by:
        %select{name: "filter_choice"}
          %option{value: ""}
          %option{value: "fhgdfkgu"} fhgdfkgu
          %option{value: "fhgdfkgu"} fhgdfkgu
          %option{value: "fhgdfkgu"} fhgdfkgu
      .order
        %label{for: "order"}Order by:
        %select{name: "order_choice"}
          %option{value: ""}
          %option{value: "fhgdfkgu"} fhgdfkgu
          %option{value: "fhgdfkgu"} fhgdfkgu
          %option{value: "fhgdfkgu"} fhgdfkgu

  .results
    =render @laser_gems
    .display#infinite-scrolling
      = will_paginate @laser_gems

.right
  .card
    %h4.card-header Popular gems
    .card-block.gem_popular_container
      -laser_gems_cloud.each do |laser_gem|
        =link_to laser_gem.name, laser_gem_path(laser_gem.name)
  .card
    %h4.card-header Popular tags
    .card-block.tag_popular_container
      -tags_cloud.each do |tag|
        =tag
