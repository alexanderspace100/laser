.index
  .search
    .card
      .card-block
        .searchbox
          = search_form_for @q, method: :get  do |f|
            = f.search_field :name_or_gem_spec_info_cont , placeholder: "Search Text"
            = f.search_field :taggings_tag_name_eq , placeholder: "Search by tag"
            = f.submit
        .order
          = sort_link(@q, "total_rank" , default_order: :desc) do
            Ranking
          = sort_link(@q, "gem_spec_total_downloads", "Downloads" , default_order: :desc)
          = sort_link(@q, "gem_git_last_commit" , "Commits" , default_order: :desc)
          = sort_link(@q, "gem_git_forks_count" , "Forks" , default_order: :desc)
          .text-muted
            = pluralize(@laser_count.count, "gem", plural: "gems")
            found.


  .results
    .gem_pages#gem_pages
      =render @laser_gems
    .infinite-scrolling
      = will_paginate @laser_gems, :renderer => WillPaginate::ActionView::BootstrapLinkRenderer
